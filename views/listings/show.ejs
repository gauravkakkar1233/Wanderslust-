<%layout("/layouts/boilerplate.ejs")-%>
    <div class="row mt-3">
        <div class="col-8 offset-3">
            <h2>
                <%=listing.title%>
            </h2>
        </div>
        <div class="card col-6 offset-3 show-cards listing-card">
            <img src="<%=listing.image%>" class="card-img-top show-image" alt="Listing-item">
            <div class="card-body">
                <p class="card-text">
                    <br>
                    <%=listing.description%> <br>
                        &#8377;<%=listing.price.toLocaleString("en-IN")%> /night <br>
                            <%=listing.location%>
                                <br>
                                <%=listing.country%> <br>
                </p>
            </div>
        </div>
        <br>
        <div class="btns">
            <a href="/listings/<%=listing._id%>/edit" class="btn btn-dark col-1 offset-3 edit-btn">Edit</a>

            <form method="post" action="/listings/<%=listing._id%>?_method=delete">
                <button class="btn btn-dark offset-4">Delete</button>
            </form>
        </div>
        <div class="col-8 offset-3 mb-3">
            <hr>
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing.id %>/reviews" method="post" novalidate class="needs-validation">
                <div class="mb-3 mt-3">
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" name="review[rating]" id="rating" min="1" max="5">

                </div>
                <div class="mb-3 mt-3">
                    <label for="comment" class="form-label">Comment</label>
                    <textarea name="review[comment]" id="comment" cols="5" rows="5" class="form-control"
                        required></textarea>
                    <div class="valid-feedback">
                        Comment is Good!
                    </div>
                    <div class="invalid-feedback">
                        Please enter the valid Comment
                    </div>
                </div>
                <button class="btn btn-outline-dark">Submit</button>
            </form>
            <hr>
            <p><b>All Reviews</b></p>
            <div class="row">
                <% for(review of listing.reviews) {%>
                    <div class="card col-5 ms-3 mb-5" > 
                        <div class="card-body">
                            <h5 class="card-title">Gaurav kakkar</h5>
                            <p class="card-text">
                                <%=review.comment%>
                            </p>
                            <p class="card-text">
                                <%=review.rating %>Stars
                            </p>
                        </div>
                    </div>
                    <%}%>
            </div>
        </div>
    </div>