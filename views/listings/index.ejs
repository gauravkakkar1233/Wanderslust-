<%layout("/layouts/boilerplate.ejs")-%>

    <body>
        <h1>All the listings</h1>
        <!-- <FORm method="GET" action="/listings/new">
        <button>Create New Post</button>
    </FORm> -->

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 ">
            <%for(let lists of alllistings){%>
                <a href="/listings/<%=lists._id%>" class="listing-link">
                    <div class="card col listing-card">
                        <img src="<%=lists.image%>" class="card-img-top" alt="All listings" style=height:20rem;>
                        <div class="card-img-overlay">
                        </div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=lists.title%> <br>
                                </b>
                                &#8377;<%= lists.price.toLocaleString("en-IN")%>/night
                            </p>
                        </div>
                    </div>
                </a>
                <%}%>
        </div>
    </body>